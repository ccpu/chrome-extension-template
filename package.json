{
  "name": "chrome-extension-template",
  "displayName": "Chrome Extension Template",
  "type": "module",
  "version": "1.0.0",
  "description": "Modern Chrome extension template with Vite, React, TypeScript, and Tailwind CSS",
  "author": "ccpu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ccpu/chrome-extension-template.git"
  },
  "keywords": [
    "chrome-extension",
    "react",
    "vite",
    "typescript",
    "tailwindcss",
    "template"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "cross-env DISABLE_NEWTAB=true tsc && cross-env DISABLE_NEWTAB=true vite build",
    "preview": "vite preview",
    "zip": "pnpm run build && node src/zip.js",
    "typecheck": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint:README": "markdownlint README.md",
    "lint:README:fix": "markdownlint README.md --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "fix:all": "pnpm run lint:fix && pnpm run lint:README:fix && pnpm run format:fix",
    "deps:update": "npx taze -r -w && pnpm install",
    "deps:update:major": "npx taze major -r -w && pnpm install",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@pixpilot/dev-config": "^3.1.2",
    "@pixpilot/eslint-config-react": "^0.4.6",
    "@tailwindcss/vite": "^4.1.13",
    "@types/chrome": "^0.1.6",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9.35.0",
    "gulp": "^5.0.1",
    "gulp-zip": "^6.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.4"
  }
}
